{{>admin/layouts/header}}


<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <h4 class="page-title">Dashboard</h4>
            <ul class="breadcrumbs">
                <li class="nav-home">
                    <a href="#">
                        <i class="icon-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Pages</a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Starter Page</a>
                </li>
            </ul>
        </div>
        <div class="page-category">
            <div class="card card-stats card-round" style="padding: 10px 10px">
                <div class="card-header">
                    <div class="card-head-row">
                        <div class="card-title">게시글 관리</div>
                    </div>
                </div>
                <form style="margin: 10px 5px" action="/edit_reports" method="POST">
                    <div>
                        <input class="form-control" style="margin: 5px 5px" type="text" placeholder="글제목" id="title" name="title" readonly>
                    </div>
                    <div>
                        <input class="form-control" style="margin: 5px 5px" type="text" placeholder="아이디" id="username" name="username" readonly>
                    </div>
                    <div>
                        <img class="form-control" style="margin: 5px 5px" src="assets/img/examples/example6.jpeg">
                    </div>
                    <div class="col-md-5">
                        <div style="margin: 5px 5px" class="form-group form-group-default">
                            <label>Species</label>
                            <select class="form-select"> <!-- 드롭다운 메뉴 -->
                                <option value="blue">노무라입깃해파리</option>
                                <option value="blue">보름달물해파리</option>
                                <option value="blue">기타</option>
                            </select>
                        </div>
                    </div>
                    <div>
                        <textarea class="form-control" style="margin: 5px 5px" placeholder="작성글 내용" id="details" name="details" rows="10" cols="50" readonly></textarea>
                    </div>
                    <div>
                        <input class="btn btn-success" style="margin: 5px 5px" type="submit" value="수정">
                        <input class="btn btn-danger" style="margin: 5px 5px" type="button" value="삭제">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


