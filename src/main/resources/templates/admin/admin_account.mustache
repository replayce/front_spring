<script>
    // 로그인 정보 유효성 검사
    function validateLogin() {
        var username = document.getElementById("username").value;
        var password = document.getElementById("password").value;

        // 사용자명과 비밀번호가 빈 값인지 확인
        if (password === "") {
            alert("비밀번호를 입력해주세요.");
            return false;
        }

        if (password.length < 6) {
            alert("비밀번호는 최소 6자 이상이어야 합니다.");
            return false;
        }
        return true; // 폼 제출 허용
    }
</script>

