{{>admin/layouts_login/header}}


<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <h4 class="page-title">Dashboard</h4>
            <ul class="breadcrumbs">
                <li class="nav-home">
                    <a href="#">
                        <i class="icon-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Pages</a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Starter Page</a>
                </li>
            </ul>
        </div>
        <div class="page-category">
            <!-- Inner page content goes here -->
            <div class="row">
                <div class="col-md-6">
                    <div class="card card-stats card-round" style="padding: 10px 10px">
                        <div class="card-header">
                            <div class="card-head-row">
                                <div class="card-title">회원가입</div>
                                <div class="card-tools">
                                    <a href="/admin_login" class="btn btn-label-success btn-round btn-sm me-2">
                                        <span class="btn-label">
                                            <i class="fa fa-pencil"></i>
                                        </span>
                                        log in
                                    </a>
                                </div>
                            </div>
                        </div>
                        <form onsubmit="return validateLogin()" style="margin: 10px 5px" action="/login" method="POST">
                            <div>
                                <input class="form-control" style="margin: 5px 5px" type="text" placeholder="아이디" id="username" name="username" required>
                            </div>
                            <div>
                                <input class="form-control" style="margin: 5px 5px" type="password" placeholder="비밀번호" id="password" name="password" required>
                            </div>
                            <div>
                                <input class="form-control" style="margin: 5px 5px" type="email" placeholder="이메일" id="email" name="email" required>
                            </div>
                            <div>
                                <input class="form-control" style="margin: 5px 5px" type="tel" placeholder="전화번호" id="phone" name="phone" required>
                            </div>
                            <div>
                                <input class="btn btn-success" style="margin: 5px 5px" type="submit" value="회원가입">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // 로그인 정보 유효성 검사
    function validateLogin() {
        var username = document.getElementById("username").value;
        var password = document.getElementById("password").value;

        // 사용자명과 비밀번호가 빈 값인지 확인
        if (username === "" || password === "") {
            alert("사용자명과 비밀번호를 모두 입력해주세요.");
            return false;
        }

        // 사용자명과 비밀번호가 최소 5자 이상인지 확인
        if (username.length < 5) {
            alert("사용자명은 최소 5자 이상이어야 합니다.");
            return false;
        }
        if (password.length < 6) {
            alert("비밀번호는 최소 6자 이상이어야 합니다.");
            return false;
        }

        // 로그인 성공 메시지
        alert("로그인 성공!");
        return true; // 폼 제출 허용
    }
</script>

